<launch>

  <param name="/kinect_kinfu1/volume_resolution" value="428" />
  <param name="/kinect_kinfu1/volume_size" value="3" />
  <node pkg="kinfu" type="kinfu" name="kinect_kinfu1" output="screen"> <!--launch-prefix="gdb -ex print &#45;&#45;args">-->
    <param name="prefix_topic" value="" />
    <param name="camera_info_topic" value="/gazebo_kinect/rgb/sdf_camera_info" />
    <param name="depth_image_topic" value="/gazebo_kinect/depth/sdf_image_raw" />
    <param name="image_topic" value="/gazebo_kinect/rgb/sdf_image_raw" />

    <param name="first_frame_reference_name" value="world_test" />
    <param name="current_frame_reference_name" value="sdf_kinect_link_optical" />
    <param name="robot_frame_reference_name" value="world" />

    <param name="forced_tf_position" value="true" />
    <param name="forced_tf_reference_frame" value="world" />
    <param name="forced_tf_current_frame" value="sdf_kinect_link_optical" />

    <!--<param name="shift_distance" value="10" />-->

    <param name="truncation_dist" value="0.2" />

    <param name="autostart" value="true" />
    <param name="response_topic" value="/kinfu_response_topic" />
    <param name="request_topic" value="/kinfu_request_topic" />
    <param name="extract_known_points" value="false" />

    <param name="depth_height" type="int" value="480" />
    <param name="depth_width" type="int" value="640" />
  </node>

</launch>
